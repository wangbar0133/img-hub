version: '3.8'

services:
  img-hub:
    build:
      context: .
      dockerfile: Dockerfile
    container_name: img-hub-app
    restart: unless-stopped
    ports:
      - "80:80"
    environment:
      - NODE_ENV=production
    networks:
      - img-hub-network
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost/health"]
      interval: 30s
      timeout: 10s
      retries: 3
      start_period: 60s
    labels:
      - "traefik.enable=true"
      - "traefik.http.routers.img-hub.rule=Host(`localhost`)"
      - "traefik.http.services.img-hub.loadbalancer.server.port=80"

  # 可选：添加反向代理（如果需要HTTPS或域名）
  # nginx-proxy:
  #   image: nginx:alpine
  #   container_name: img-hub-proxy
  #   restart: unless-stopped
  #   ports:
  #     - "443:443"
  #   volumes:
  #     - ./ssl:/etc/nginx/ssl
  #     - ./proxy.conf:/etc/nginx/conf.d/default.conf
  #   depends_on:
  #     - img-hub
  #   networks:
  #     - img-hub-network

networks:
  img-hub-network:
    driver: bridge

# 可选：持久化卷（如果需要存储用户上传的图片）
volumes:
  img-storage:
    driver: local 